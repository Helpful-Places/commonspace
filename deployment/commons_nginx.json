{
  "variables": {
    "container_image_name": "us.gcr.io/nyc-tlc-1225/commons-nginx",
    "version": "",
    "gcloud_json_key": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "node:8.12",
      "commit": true,
      "changes": [
        "EXPOSE 80 80"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": "mkdir commons"
    },
    {
      "type": "file",
      "source": ".babelrc",
      "destination": "commons/.babelrc"
    },
    {
      "type": "file",
      "source": "src/",
      "destination": "commons/src"
    },
    {
      "type": "file",
      "source": "css/",
      "destination": "commons/css"
    },
    {
      "type": "file",
      "source": "package.json",
      "destination": "commons/package.json"
    },
    {
      "type": "file",
      "source": "index.html",
      "destination": "commons/index.html"
    },
    {
      "type": "file",
      "source": "map.html",
      "destination": "commons/map.html"
    },
    {
      "type": "file",
      "source": "yarn.lock",
      "destination": "commons/yarn.lock"
    },
    {
      "type": "file",
      "source": "webpack.config.js",
      "destination": "commons/webpack.config.js"
    },
    {
      "type": "shell",
      "inline": [
        "cd commons/",
	"npm install -g -s --no-progress yarn",
	"yarn",
        "yarn build"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install nginx -y"  
      ]
    },
    {
      "type": "file",
      "source": "deployment/nginx.conf",
      "destination": "/nginx.conf"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `container_image_name`}}",
        "tag": "{{user `version`}}"
      }, {
        "type": "docker-push",
        "login": true,
        "login_username": "_json_key",
        "login_password": "{{user `gcloud_json_key`}}",
        "login_server": "https://gcr.io"
      }
    ]
  ]
}
